---
import Main from '../layouts/Main.astro';
import SectionNavigation from '../components/SectionNavigation.astro';
---

<Main title="About Me">
  <SectionNavigation />
  <div class="relative mt-8 animate-text opacity-0 translate-y-5">
    <p class="text-lg max-md:text-md mt-4">
      我叫 Ginlon 是一名<span class="text-rose-custom font-bold"
        >前端工程师</span
      >
      <br />
      I'm available for all kinds of work you might need. <span
        class="bg-gradient-to-r from-orange-400 to-red-600 bg-clip-text text-transparent font-bold"
      >
        Feel free to contact me!
      </span>
    </p>
  </div>
</Main>

<script>
  import { gsap } from 'gsap';

  document.addEventListener('astro:page-load', () => {
    gsap.to('.animate-text', {
      opacity: 1,
      y: 0,
      duration: 1,
      ease: 'power2.out',
    });
  });
</script>
